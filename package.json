{
  "name": "hashline-opencode",
  "version": "0.1.0",
  "description": "Standalone hashline plugin extraction from oh-my-opencode",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test ./src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "opencode",
    "plugin",
    "hashline",
    "hash",
    "edit"
  ],
  "license": "SUL-1.0",
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.19",
    "diff": "^8.0.3"
  },
  "devDependencies": {
    "bun-types": "1.3.6",
    "typescript": "^5.7.3"
  }
}
