{
  "name": "hashline-opencode",
  "version": "0.1.0",
  "description": "OpenCode plugin that replaces the built-in edit tool with hash-anchored LINE#ID precision editing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test ./src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "opencode",
    "plugin",
    "hashline",
    "hash",
    "edit"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/LevinFaber/hashline-opencode.git"
  },
  "homepage": "https://github.com/LevinFaber/hashline-opencode#readme",
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.19",
    "diff": "^8.0.3"
  },
  "devDependencies": {
    "bun-types": "1.3.6",
    "typescript": "^5.7.3"
  }
}
